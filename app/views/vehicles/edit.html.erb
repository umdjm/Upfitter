
<p id="notice"><%= notice %></p>

<div id="Vehicle">
  <%= image_tag @vehicle.image_url %>
</div>


<div id="Accessories">
  <% @accessories.each do |accessory| %>
      <%= image_tag accessory.image_url, :class=>"Accessory", :id=>accessory.name.gsub(/\s+/, "") %>
  <% end %>
</div>

<div id="dropareas">
  <%= render 'dropareas' %>
</div>


<div id="droparea_divs">
  <% @vehicle.dropareas.each do |droparea| %>
      <div style="<%=get_style(droparea)%>">
      </div>
  <% end %>
</div>

<%= form_for @vehicle, :class => "edit_form", :html =>{:multipart=>true} do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.file_field :image %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>


<% end %>

<%= link_to 'Display Droppable Version', @vehicle %>